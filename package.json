{
  "license": "ISC",
  "scripts": {
    "build": "yarn run build-css && yarn run compress",
    "build-css": "yarn run tailwindcss build tailwind.css -o ./static/css/main.css",
    "compress": "yarn -s run minify ./static/css/main.css > ./static/css/main.min.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.8",
    "tailwindcss": "^2.0.4",
    "minify": "^7.0.1",
    "uglify-js": "^3.13.3"
  }
}
